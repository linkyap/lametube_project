<main class="main-content">
  <div class="container">
    <h2>Profile Information</h2>
    <i class="fa fa-user-circle-o" aria-hidden="true"></i>

    <label for="users username">Username: {{user.username}}</label>
    <p type="text" name="username" id="users username"></p>

    <label for="users usersemail">Email: {{user.email}}</label>
    <p type="text" name="email" id="users useremail"></p>

  </div>
  <section class="profile-videos">
    <h2>Your Posts</h2>
    <div class="post-thumbnails">
      {{#each posts}}
      <div class="post-card">
        <div class="post-thumbnail">
          <a href="/posts/{{this.id}}" target="_self">
            <img src="/{{this.thumbnail}}" alt="{{this.title}}" style=border-radius:15px>
            <p class="thumbnail-title">{{this.title}}</p>
          </a>
          <form action="/posts/delete/{{this.id}}" method="post">
            <input type="hidden" name="_method" value="delete">
            <button class="btn-delete" type="submit"
              onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
</main>